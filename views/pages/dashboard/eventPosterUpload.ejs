<link
  rel="stylesheet"
  href="https://unpkg.com/aksfileupload@1.0.0/dist/aksFileUpload.min.css"
/>
<script src="https://unpkg.com/aksfileupload@1.0.0/dist/aksFileUpload.min.js"></script>
<link rel="stylesheet" href="/css/eventPosterUpload.css" />

<div class="flex flex-col justify-between my-auto items-center h-5/6">
  <div id="aks-file-upload"></div>
  <input
    id="eventName"
    type="text"
    name="eventName"
    placeholder="Enter event name"
    class="
      w-1/2
      px-8
      py-4
      rounded-lg
      font-medium
      bg-gray-100
      border border-gray-200
      placeholder-gray-500
      text-sm
      focus:outline-none focus:bg-white
    "
  />
  <label for="startTime">Enter event start time :</label>
  <input
    id="eventStart"
    type="date"
    name="startTime"
    id="startTime"
    class="
      w-1/2
      px-8
      py-4
      rounded-lg
      font-medium
      bg-gray-100
      border border-gray-200
      placeholder-gray-500
      text-sm
      focus:outline-none focus:bg-white
    "
  />
  <label for="endTime">Enter event end time :</label>
  <input
    id="eventEnd"
    type="date"
    name="endTime"
    id="endTime"
    class="
      w-1/2
      px-8
      py-4
      rounded-lg
      font-medium
      bg-gray-100
      border border-gray-200
      placeholder-gray-500
      text-sm
      focus:outline-none focus:bg-white
    "
  />
  <button
    type="button"
    onclick="uploadPoster()"
    id="uploadBtn"
    class="
      w-1/3
      inline-flex
      justify-center
      rounded-full
      border border-transparent
      shadow-sm
      px-6
      py-2
      bg-green-600
      text-base
      font-medium
      text-white
      hover:bg-green-800
      focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500
      sm:ml-3
      md:w-1/4
      sm:text-sm
    "
  >
    <svg
      class="animate-spin -ml-1 mr-3 h-5 w-5 text-white hidden"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
    >
      <circle
        class="opacity-25"
        cx="12"
        cy="12"
        r="10"
        stroke="currentColor"
        stroke-width="4"
      ></circle>
      <path
        class="opacity-75"
        fill="currentColor"
        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
      ></path>
    </svg>
    <span>Upload</span>
  </button>
</div>
<script src="/js/eventPosterUpload.js"></script>
